{
  "name": "ayurvedic-recommender",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "axios": "^1.8.4",
    "dompurify": "^3.0.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.4.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cypress": "^14.2.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^9.0.3",
    "postcss-import": "^15.1.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "start": "npm run build:css && cross-env REACT_APP_BACKEND_URL=http://localhost:8080 NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "build": "npm run build:css && cross-env NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "build:css": "postcss static/css/main.tailwind.css -o static/css/main.bundle.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypress:run": "start-server-and-test 'npm start' http://localhost:3000 'cypress run'",
    "integration:test": "cross-env NODE_PATH=./node_modules node ../tests/integration/integration_test.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!(axios)/)"
    ]
  },
  "proxy": "http://localhost:8080"
}
