{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build",
          "installCommand": "npm ci",
          "buildCommand": "npm run build",
          "outputDirectory": "build"
        }
      },
      {
        "src": "back/vercel_setup.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9",
          "excludeFiles": [
            "{.next,*.cache,node_modules,public,app}/**",
            "**/__pycache__/**",
            "**/*.pyc",
            "**/*.pyo",
            "**/*.pyd",
            "**/tests/**",
            "**/test_*.py",
            "**/_test*.py",
            "**/docs/**",
            "**/examples/**",
            "**/sample/**",
            "**/demo/**",
            "**/*.md",
            "**/README*"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/dosha",
        "dest": "back/app.py"
      },
      {
        "src": "/api/weather",
        "dest": "back/app.py"
      },
      {
        "src": "/api/recommendations/(.*)",
        "dest": "back/app.py"
      },
      {
        "src": "/api/health",
        "dest": "back/app.py"
      },
      {
        "src": "/api/(.*)",
        "dest": "back/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ]
}